<h1>    Company       </h1>
<%= render 'showcompany', movies_array: @company_movies, company: @company %>
<%= form_for(@company) do |f| %>
    <% if @company.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@company.errors.count, "error") %> prohibited this topic from being saved:</h2>

          <ul>
            <% @company.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <div class="field">
      <%= f.label :name %><br>
      <%= f.text_field :name %>
    </div>

    <div class="field">
      <%= f.label :detail %><br>
      <%= f.text_field :detail %>
    </div>
    <%     movies_array.each do |movie| %>
        <input type="checkbox" name="movie_ids[]" value="<%= movie.id %>"/>
        <%= f.label movie.title     %>
    <% end %>
    <div class="actions">
      <%= f.submit %>
    </div>
<% end %>
